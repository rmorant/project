    <record id="timesheet_helpdesk_ticket_view_form" model="ir.ui.view">
        <field name="name">timesheet.helpdesk.ticket.form.view.time_control_type</field>
        <field name="model">helpdesk.ticket</field>
        <field
            name="inherit_id"
            ref="helpdesk_mgmt_timesheet.timesheet_helpdesk_ticket_view_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='timesheet_ids']//field[@name='name']"
                position="after"
            >
                <field name="time_type_id" />
            </xpath>
        </field>
    </record>

</odoo>
